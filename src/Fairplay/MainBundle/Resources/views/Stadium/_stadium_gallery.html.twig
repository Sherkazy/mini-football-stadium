<div id="gallery" class="content">
    <div id="controls" class="controls"></div>
    <div class="slideshow-container">
        <div id="loading" class="loader"></div>
        <div id="slideshow" class="slideshow"></div>
    </div>
    <div id="caption" class="caption-container"></div>
</div>
<div id="thumbs" class="navigation">
    <ul class="thumbs noscript">

        {% for galleryHasMedia in stadium.gallery.GalleryHasMedias %}
        <li>
            <a class="thumb" name="leaf" href="{% path galleryHasMedia.media, 'default_big' %}" title="Title #0">
                {#<img src="http://farm4.static.flickr.com/3261/2538183196_8baf9a8015_s.jpg" alt="Title #0" />#}
                {% thumbnail galleryHasMedia.media, 'default_big' %}
            </a>
            <div class="caption">
                <div class="download">
                    <a href="http://farm2.static.flickr.com/1260/930424599_e75865c0d6_b.jpg">Download Original</a>
                </div>
                <div class="image-title">Title #23</div>
                <div class="image-desc">Description</div>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
<div style="clear: both;"></div>