{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/css/fullcalendar/fullcalendar.css') }}" />
    <link rel="stylesheet" href="{{ asset('public/css/fullcalendar/fullcalendar.print.css') }}" media="print" />
  {% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('public/js/fullcalendar/fullcalendar.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('public/js/fullcalendar/gcal.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/sonatajquery/jquery-ui-1.8.23.js') }}"></script>
    <script type="text/javascript" src="{{ asset('public/js/fullcalendar/calendarscripts.js') }}"></script>
{% endblock %}
{% block content %}
    <div class="stadium_info">
        <h3>{{ stadium.name }}</h3>

        <p>Рейтинг</p>
       <p>{% include 'FairplayMainBundle:Stadium:_rating.html.twig' %}
       <p>{% include 'FairplayMainBundle:Stadium:_facility.html.twig' %}
        <p> Адрес: {{ stadium.address }}</p>
    </div>
        <div class="calendar">
            <img src="{{ asset('public/img/loading-32x32.gif') }}" class="loading-img"/>
        </div>
        {% render(controller('FairplayMainBundle:Map:show',{ 'id': stadium.id })) %}
{% endblock %}
