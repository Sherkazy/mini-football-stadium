<h1>Регистрация</h1>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST"
      class="fos_user_registration_register" id="registration">

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="registration_label">{{ form_label(form.email, 'E-mail:') }}</div>
    {{ form_errors(form.email) }}
    <div class="registration_input">{{ form_widget(form.email) }}</div>

    <div class="registration_label">{{ form_label(form.plainPassword.first, 'Пароль:') }}</div>
    {{ form_errors(form.plainPassword.first) }}
    <div class="registration_input">{{ form_widget(form.plainPassword.first) }}</div>

    <div class="registration_label">{{ form_label(form.plainPassword.second, 'Повтор пароля:') }}</div>
    {{ form_errors(form.plainPassword.second) }}
    <div class="registration_input">
        {{ form_widget(form.plainPassword.second) }}
    </div>

    {% form_theme form 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}

    {{ form_widget(form.recaptcha, { 'attr': {
    'options' : {
    'theme' : 'clean',
    },
    } }) }}
    <div class="registration_submit">
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}"/>
    </div>
    {{ form_end(form) }}
</form>